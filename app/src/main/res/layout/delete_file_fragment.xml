<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:id="@+id/MaterialComponents.Headline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="MaterialComponents.Headline1"
        android:textColor="@android:color/white"
        android:textAppearance=
            "@style/TextAppearance.MaterialComponents.Headline1" />
    <TextView
        android:id="@+id/MaterialComponents.Headline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/MaterialComponents.Headline1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="MaterialComponents.Headline2"
        android:textColor="@android:color/white"
        android:textAppearance=
            "@style/TextAppearance.MaterialComponents.Headline2" />
    <TextView
        android:id="@+id/MaterialComponents.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/MaterialComponents.Headline2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="MaterialComponents.Body1"
        android:textColor="@android:color/white"
        android:textAppearance=
            "@style/TextAppearance.MaterialComponents.Body1" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/dff_appbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="280dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlayMaterial"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/dff_toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:theme="@style/AppTheme.ToolBarOverlayMaterial"
            app:layout_scrollFlags="scroll|enterAlways"
            app:menu="@menu/menu_main"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="CDS"></com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>


</androidx.constraintlayout.widget.ConstraintLayout>