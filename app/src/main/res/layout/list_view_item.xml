<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/iv_folder"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_outline_folder_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/left_guideline"
        />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/top_guideline"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        android:layout_marginLeft="8dp"
        android:text="@string/file_default_name"
        android:textColor="?attr/colorPrimary"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/Bottom_guideline"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@id/left_guideline"
        android:layout_marginLeft="8dp"
        android:text="@string/file_default_date"
        android:textColor="@color/colorTextSecondary"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
         />

    <ImageView
        android:id="@+id/iv_check_box"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/right_guideline"
        android:layout_marginRight="0dp"
        android:background="@drawable/ic_baseline_check_box_outline_blank_24"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/iv_more_vert"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/right_guideline"
        android:background="@drawable/ic_baseline_more_vert_24"
        android:clickable="true" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>