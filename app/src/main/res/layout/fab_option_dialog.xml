<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_base_text_picker_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_base_text_picker_dialog"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        app:layout_constraintLeft_toLeftOf="@id/sys_test_dialog_guideline_vertical_left"
        app:layout_constraintRight_toRightOf="@id/sys_test_dialog_guideline_vertical_right"
        app:layout_constraintTop_toTopOf="@id/sys_test_dialog_guideline_horizontal_Top"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_box1_base_text_picker_dialog"
        style="@style/Widget.Custom_MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@id/sys_test_dialog_guideline_vertical_left"
        app:layout_constraintRight_toRightOf="@id/sys_test_dialog_guideline_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/title_base_text_picker_dialog">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="@string/InputHint1_BaseTextPicker_dialog" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_create_folder_dialog_negative"
        style="@style/Widget.Custom.ActionButton1"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/button_base_text_picker_dialog_negative"
        app:layout_constraintRight_toLeftOf="@id/button_create_folder_dialog_positive"
        app:layout_constraintTop_toBottomOf="@+id/input_box1_base_text_picker_dialog"
        />
        <!-- android:paddingBottom="16dp"
        android:drawableLeft="@drawable/ic_baseline_file_upload_24" -->
    <Button
        android:id="@+id/button_create_folder_dialog_positive"
        style="@style/Widget.Custom.ActionButton1"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/button_base_text_picker_dialog_positive"
        app:layout_constraintRight_toLeftOf="@id/sys_test_dialog_guideline_vertical_right"
        app:layout_constraintTop_toBottomOf="@+id/input_box1_base_text_picker_dialog"
        android:gravity="center"
        />
        <!-- android:paddingBottom="16dp"
        android:drawableLeft="@drawable/ic_baseline_file_upload_24" -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sys_test_dialog_guideline_horizontal_Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sys_test_dialog_guideline_horizontal_Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sys_test_dialog_guideline_vertical_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sys_test_dialog_guideline_vertical_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>